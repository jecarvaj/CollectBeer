<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    style="@style/layouts"
    android:gravity="center_horizontal"
    tools:context="com.example.jean.collectbeer.activity.DetalleActivity">
    <ImageView
        android:id="@+id/imageViewDetalle"
        android:layout_width="190dp"
        android:layout_height="253dp"
        android:layout_marginBottom="16dp"/>
    <TextView
        style="@style/textViewNuevo"
        android:text="hllaaaaaaaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvNombreDetalle"/>

    <TextView
        style="@style/textViewNuevo"
        android:text="hllaaaaaaaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvVariedadDetalle"/>
    <TextView
        style="@style/textViewNuevo"
        android:text="hllaaaaaaaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvPaisDetalle"/>
    <TextView
        style="@style/textViewNuevo"
        android:text="hllaaaaaaaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvOtroDetalle"/>

    <android.support.v7.widget.AppCompatRatingBar
        android:id="@+id/ratingBarDetalle"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        />

</LinearLayout>
