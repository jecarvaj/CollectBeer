<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/layouts"
    tools:context="com.example.jean.collectbeer.NuevoActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/button"
            android:layout_width="70dp"
            android:layout_height="65dp"
            android:background="@drawable/ic_add_a_photo_white_48dp"
            android:layout_gravity="end"
            />

        <TextView
            android:text="@string/nombre"
            style="@style/textViewNuevo" />
        <EditText
            android:id="@+id/etNombre"
            android:hint="@string/nombreEj"
            style="@style/editTextNuevo"
            />


        <TextView
            android:text="@string/variedad"
            style="@style/textViewNuevo" />
        <EditText
            android:id="@+id/etVariedad"
            android:hint="@string/variedadEj"
            style="@style/editTextNuevo"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                >
                <TextView
                    android:id="@+id/textViewPais"
                    android:text="@string/pais"
                    style="@style/textViewNuevo" />
                <EditText
                    android:layout_below="@id/textViewPais"
                    android:id="@+id/etPais"
                    android:layout_marginEnd="10dp"
                    android:hint="@string/paisEj"
                    style="@style/editTextNuevo"
                    />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent">
                <TextView
                    android:id="@+id/textViewAlcohol"
                    android:text="@string/alcohol"
                    style="@style/textViewNuevo"
                    android:layout_width="wrap_content"
                    android:layout_centerHorizontal="false"/>
                <EditText
                    android:id="@+id/etAlcohol"
                    android:layout_marginStart="10dp"
                    android:hint="@string/alcoholEj"
                    style="@style/editTextNuevo"
                    android:layout_width="match_parent"
                    android:layout_below="@+id/textViewAlcohol"
                    android:layout_centerHorizontal="true"
                    />
            </RelativeLayout>

        </LinearLayout>


        <TextView
            android:text="@string/otro"
            style="@style/textViewNuevo" />
        <EditText
            android:id="@+id/etOtro"
            android:hint="@string/otroEj"
            style="@style/editTextNuevo"
            android:lines="2"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="1dp"
            android:numStars="6"
            android:rating="6"
            android:stepSize="0.5"
            />


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <Button
            android:id="@+id/boton"
            style="@style/boton"

            android:layout_width="213dp"
            android:layout_height="41dp"
            android:layout_gravity="end"
            android:background="@drawable/boton"
            android:drawablePadding="8dp"
            android:text="Guardar"
            android:textAllCaps="true"
            android:textColor="#daae54"
            android:textSize="16dp"
            android:textStyle="bold"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>



</LinearLayout>
