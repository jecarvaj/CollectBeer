<resources>

    <!-- Base application theme. parent="Theme.AppCompat.Light.NoActionBar" -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:colorBackground">@color/card</item>
    </style>

    <style name="MainMenu" parent="Theme.AppCompat.NoActionBar">
        <item name="android:background">@color/primary</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="layouts">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/back2</item>
        <item name="android:orientation">vertical</item>
      <!--  <item name="android:padding">5dp</item>-->
    </style>

    <!--MENU-->

    <!--Nuevo-->
    <style name="textViewNuevo">
        <item name="android:layout_margin">4dp</item>
        <item name="android:textColor">#874301</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="editTextNuevo">
        <item name="android:background">@drawable/background_edittext</item>
        <item name="android:padding">4dp</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:inputType">textCapWords</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColorHint">@color/hintNuevo</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="layoutItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">1</item>

    </style>
    <style name="tv_item">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Kuntsman Gran Torobayo</item>
    </style>

    <style name="tvDetalle" parent="textViewNuevo">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="etDetalle" parent="editTextNuevo">
        <item name="android:padding">4dp</item>
        <item name="android:background">@drawable/selector_detalle</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textColor">@drawable/selector_text_detalle</item>
        <item name="android:configChanges">keyboardHidden|orientation|screenSize</item>
        <item name="android:state_enabled">true</item>
        <item name="android:state_focused">true</item>
    </style>
</resources>
